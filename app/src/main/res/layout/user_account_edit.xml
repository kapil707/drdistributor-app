<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Account_edit"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dip"
            android:layout_marginBottom="10dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/home_page_box_shap1"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip">

                    <ImageView
                        android:id="@+id/u_img"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        app:srcCompat="@drawable/logo"
                        android:layout_marginLeft="5dip"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_gravity="left">

                        <TextView
                            android:id="@+id/u_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Name"
                            android:textColor="@color/usercolor"
                            android:textSize="20dip"
                            android:gravity="left"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/u_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:maxLines="1"
                            android:text="code"
                            android:textColor="@color/useraltercodecolor"
                            android:textSize="16dip"
                            android:gravity="left"
                            android:layout_gravity="left"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal"
                    android:background="@drawable/login_box_shap"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        app:srcCompat="@drawable/phone1" />

                    <EditText
                        android:id="@+id/user_mobile_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Enter mobile number"
                        android:inputType="phone"
                        android:textColor="@color/login_page_color1"
                        android:textColorHint="@color/login_page_color1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/login_or_create_shap1"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal"
                    android:background="@drawable/login_box_shap"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        app:srcCompat="@drawable/email1" />

                    <EditText
                        android:id="@+id/user_email_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Enter email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/login_page_color1"
                        android:textColorHint="@color/login_page_color1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/login_or_create_shap1"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal"
                    android:background="@drawable/login_box_shap"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        app:srcCompat="@drawable/map1" />

                    <EditText
                        android:id="@+id/user_address_text"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Enter address"
                        android:inputType="textMultiLine"
                        android:textColor="@color/login_page_color1"
                        android:textColorHint="@color/login_page_color1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="15dip"
                    android:textColor="@color/login_page_color1"
                    android:textSize="20dip" />

                <Button
                    android:id="@+id/updatebtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Update account"
                    android:layout_marginTop="30dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/login_btn_shap"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/updatebtn1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Update account"
                    android:layout_marginTop="30dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/login_btn_shap_dis"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:visibility="gone"/>


                <LinearLayout
                    android:id="@+id/user_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/home_page_box_shap1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="30dip"
                    android:layout_marginRight="10dip"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dip"
                        android:text="Last update request"
                        android:textSize="20dip"
                        android:textStyle="bold"
                        android:textColor="@color/home_page_title_clr"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/phone1" />

                        <TextView
                            android:id="@+id/u_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="5dip"
                            android:text="Mobile"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/email1" />

                        <TextView
                            android:id="@+id/u_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginRight="5dip"
                            android:text="Email"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/map1" />

                        <TextView
                            android:id="@+id/u_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginRight="5dip"
                            android:text="Address"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/u_gstno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:text="GSTNO"
                        android:textSize="16dp"
                        android:textColor="@color/font_white"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/u_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textSize="16dp"
                        android:textColor="@color/font_white"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/login_page_shap"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/menu_search_div_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/menu_search_shap">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    app:srcCompat="@drawable/search_img_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search medicines / company"
                    android:layout_margin="5dp"
                    android:textColor="@color/home_page_title_clr"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/header_result_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading...."
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>