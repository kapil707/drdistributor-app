<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medicine_details"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/main_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="90dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/item_image"
                            android:layout_width="match_parent"
                            android:layout_height="264dp"
                            android:adjustViewBounds="true"
                            android:background="#ffffff"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/logo5" />

                        <ImageView
                            android:id="@+id/item_featured"
                            app:srcCompat="@drawable/featured_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/item_out_of_stock"
                            app:srcCompat="@drawable/out_of_stock_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/item_image1"
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            android:scaleType="fitCenter"
                            android:background="#ffffff"
                            app:srcCompat="@drawable/logo5"/>

                        <ImageView
                            android:id="@+id/item_image2"
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="5dp"
                            android:background="#ffffff"
                            app:srcCompat="@drawable/logo5"/>
                        <ImageView
                            android:id="@+id/item_image3"
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="5dp"
                            android:background="#ffffff"
                            app:srcCompat="@drawable/logo5"/>

                        <ImageView
                            android:id="@+id/item_image4"
                            android:layout_width="wrap_content"
                            android:layout_height="62dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:gravity="left"
                            android:scaleType="fitCenter"
                            android:layout_marginLeft="5dp"
                            android:background="#ffffff"
                            app:srcCompat="@drawable/logo5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:text="item_name"
                            android:textColor="@color/item_name_color"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/item_packing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:text="item_packing"
                                android:textColor="@color/item_packing_color"
                                android:textSize="16dp"/>

                            <TextView
                                android:id="@+id/item_batch_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="item_batch_no"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/item_batch_no_color"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/item_margin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="item_margin"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/item_margin_color"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/item_expiry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="item_expiry"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/item_expiry_color"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/item_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="item_company"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_company_color"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/item_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="item_stock"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/item_stock_color"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/item_scheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="item_scheme"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/item_scheme_color"
                                android:textSize="16dp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_scheme_line_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6D323232"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>

                    <TextView
                        android:id="@+id/item_scheme_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Scheme is not added in Landing price"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/item_scheme_line_color"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/item_description1_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6D323232"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>

                    <TextView
                        android:id="@+id/item_description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="item_description"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/item_description1_color"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6D323232"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_ptr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="item_ptr"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_ptr_color"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/item_mrp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="item_mrp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_mrp_color"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_gst"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="item_gst"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_gst_color"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/item_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="item_price"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_price_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="*Approximate billing value per unit, subject change . As per final invoice."
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/item_scheme_line_color"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6D323232"
                        android:orientation="vertical"
                        android:layout_margin="5dp"></LinearLayout>


                    <LinearLayout
                        android:id="@+id/item_description2_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/description2color"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_description2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description2"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/item_description2_color"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/loading_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100pt"
            android:layout_marginLeft="58pt"
            android:background="@drawable/listview_main_shap_all_pg"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:src="@drawable/logo5" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Please Wait...."
                    android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/home_page_box_shap1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Order quantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/item_cart_total_color"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:background="@drawable/medicine_add_qty_shap"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/item_quantity_txt"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:ems="10"
                        android:hint="Eg 1,2"
                        android:inputType="number"
                        android:layout_marginLeft="20dp">

                        <requestFocus />
                    </EditText>
                </LinearLayout>

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_shap"
                android:text="Add to cart"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/add_to_cart_dis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_shap_dis"
                android:text="Add to cart"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/login_page_shap"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/menu_search_div_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/menu_search_shap">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    app:srcCompat="@drawable/search_img_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search medicines / company"
                    android:layout_margin="5dp"
                    android:textColor="@color/home_page_title_clr"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/header_result_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading...."
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
