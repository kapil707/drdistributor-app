<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/select_chemist_LinearLayout"
        android:background="@drawable/home_page_box_shap1"
        android:padding="5dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chemist_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="5dip"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/chemist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chemist_name"
                android:textColor="@color/chemist_name_color"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/chemist_altercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chemist_altercode"
                android:textColor="@color/chemist_altercode_color"
                android:textSize="15dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/chemist_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="message"
                android:textColor="@color/item_description1_color"
                android:textSize="15dp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
