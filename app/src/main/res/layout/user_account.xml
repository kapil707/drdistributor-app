<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Account"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dip"
            android:layout_marginBottom="10dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/home_page_box_shap1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip">

                    <ImageView
                        android:id="@+id/u_img"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        app:srcCompat="@drawable/logo"
                        android:layout_marginLeft="5dip"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_gravity="left">

                        <TextView
                            android:id="@+id/u_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Name"
                            android:textColor="@color/usercolor"
                            android:textSize="20dip"
                            android:gravity="left"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/u_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:maxLines="1"
                            android:text="code"
                            android:textColor="@color/useraltercodecolor"
                            android:textSize="16dip"
                            android:gravity="left"
                            android:layout_gravity="left"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/home_page_box_shap1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/phone1" />

                        <TextView
                            android:id="@+id/u_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="5dip"
                            android:text="Mobile"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>

                        <ImageView
                            android:id="@+id/u_edit"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            app:srcCompat="@drawable/edit_icon"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dip"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/email1" />

                        <TextView
                            android:id="@+id/u_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginRight="5dip"
                            android:text="Email"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="3dip"
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            app:srcCompat="@drawable/map1" />

                        <TextView
                            android:id="@+id/u_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginRight="5dip"
                            android:text="Address"
                            android:textSize="15dip"
                            android:textStyle="bold"
                            android:textColor="@color/home_page_title_clr"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/u_gstno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:text="GSTNO"
                        android:textSize="16dp"
                        android:textColor="@color/font_white"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/u_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textSize="16dp"
                        android:textColor="@color/font_white"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/home_page_down_btn"
                    android:orientation="horizontal">

                    <ImageView
                        app:srcCompat="@drawable/photo1"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_margin="3dip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dip"
                        android:gravity="left|center"
                        android:text="Update image"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@color/home_page_title_clr"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/home_page_down_btn"
                    android:orientation="horizontal">

                    <ImageView
                        app:srcCompat="@drawable/b_lock"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_margin="3dip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dip"
                        android:gravity="left|center"
                        android:text="Update password"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@color/home_page_title_clr"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/home_page_down_btn"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        app:srcCompat="@drawable/homebtn1"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_margin="3dip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dip"
                        android:gravity="left|center"
                        android:text="My Orders"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@color/home_page_title_clr"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_invoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/home_page_down_btn"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        app:srcCompat="@drawable/homebtn4"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_margin="3dip"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dip"
                        android:gravity="left|center"
                        android:text="My Invoices"
                        android:textSize="15dip"
                        android:textStyle="bold"
                        android:textColor="@color/home_page_title_clr"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="50dip">

            <ImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_name"
                android:textSize="15dip"
                android:textStyle="bold"
                android:textColor="@color/home_page_title_clr"
                android:layout_marginTop="5dip"/>

            <TextView
                android:id="@+id/android_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dip"
                android:textStyle="bold"
                android:textColor="#878787"
                android:layout_marginTop="5dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/login_page_shap"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/menu_search_div_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/menu_search_shap">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    app:srcCompat="@drawable/search_img_b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search medicines / company"
                    android:layout_margin="5dp"
                    android:textColor="@color/home_page_title_clr"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/header_result_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading...."
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>