<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Place_order"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/main_pg_bg2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_page_shap">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_marginTop="10dip"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:src="@drawable/logo2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:orientation="horizontal"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="D R Distributors Pvt Ltd"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:textSize="25dip"
                    android:layout_marginRight="10dip"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15pt"
            android:layout_marginTop="120pt"
            android:layout_marginRight="15pt"
            android:background="@drawable/listview_main_shap_all_pg"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/logo5" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:text="Your order is going to place please do not close the application"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_div2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="125pt"
            android:layout_marginLeft="15pt"
            android:layout_marginRight="15pt"
            android:background="@drawable/listview_main_shap_all_pg"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/logo5" />

            <TextView
                android:id="@+id/place_order_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Your order is going to place please do not close the application"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer_div"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="50dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_title_name"
                android:textSize="15dip"
                android:textStyle="bold"
                android:textColor="@color/home_page_title_clr"
                android:layout_marginTop="5dip"/>

            <TextView
                android:id="@+id/android_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App"
                android:textSize="15dip"
                android:textStyle="bold"
                android:textColor="#878787"
                android:layout_marginTop="5dip"/>
        </LinearLayout>

        <Button
            android:id="@+id/go_home_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Go back"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/login_btn_shap"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>